  <script>
    function uploadVideo() {
      const input = document.getElementById('videoInput');
      const status = document.getElementById('status');

      if (!input.files.length) {
        status.textContent = 'Please select a video file to upload.';
        return;
      }

      status.textContent = 'Video uploaded (simulated).'; // Replace with actual logic later.
    }
  </script>
