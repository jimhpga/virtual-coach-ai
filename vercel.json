{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/docs/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(?:html|json)",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    },
    {
      "source": "/(.*)\\.(?:css|js|png|jpg|jpeg|svg|webp)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ],
  "redirects": [
    { "source": "/index", "destination": "/", "permanent": true },
    { "source": "https://www.virtualcoachai.net/(.*)", "destination": "https://virtualcoachai.net/$1", "permanent": true }
  ]
}
