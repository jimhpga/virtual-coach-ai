{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node", "config": { "regions": ["iad1"] } },
    { "src": "docs/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/(js|css)/(.+)$", "dest": "/docs/$1/$2" },
    { "src": "^/(faq|upload|report|pricing)/?$", "dest": "/docs/$1.html" },
    { "src": "^/$", "dest": "/docs/index.html" },
    { "src": "^/(.*)$", "dest": "/docs/$1" }
  ]
}

