{
  "version": 2,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },

    { "src": "^/js/upload\\.client\\.js$", "dest": "/upload.client.js" },
    { "src": "^/js/report\\.client\\.js$", "dest": "/report-shim.js" },
    { "src": "^/css/site\\.css$",  "dest": "/style.css" },
    { "src": "^/css/report\\.css$", "dest": "/report.css" },

    { "src": "^/(faq|pricing|upload|report|contact|login|about|analyze|coming-soon|reports?)/?$", "dest": "/$1.html" },
    { "src": "^/$", "dest": "/index.html" },

    { "src": "^/(.*)$", "dest": "/$1" }
  ]
}
