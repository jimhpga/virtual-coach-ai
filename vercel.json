{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },

    /* keep a project-level /reports space (e.g., static JSON or redirects) */
    { "source": "/reports/:path*", "destination": "/reports/:path*" },

    /* serve the site from /docs */
    { "source": "/", "destination": "/docs/index.html" },
    { "source": "/:path*", "destination": "/docs/:path*" }
  ],

  "headers": [
    {
      "source": "/(.*)\\.(html|json)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|svg|webp)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "redirects": [
    { "source": "/index", "destination": "/", "permanent": true },
    { "source": "https://www.virtualcoachai.net/(.*)", "destination": "https://virtualcoachai.net/$1", "permanent": true }
  ],

  /* run the analysis processor periodically */
  "crons": [
    { "path": "/api/process-pending", "schedule": "*/2 * * * *" }
  ]
}
