{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VCAI_CoachOut",
  "type":"object",
  "required":["summary","top_faults","drills","practice_plan","one_liner"],
  "properties":{
    "summary":{"type":"string","minLength":30,"maxLength":420},
    "top_faults":{
      "type":"array","minItems":1,
      "items":{"type":"object","required":["code","why","evidence"],
        "properties":{
          "code":{"type":"string"},
          "why":{"type":"string"},
          "evidence":{"type":"array","items":{"type":"string"}}
        }}
    },
    "drills":{
      "type":"array","maxItems":4,
      "items":{"type":"object","required":["id","steps","reps","cue"],
        "properties":{
          "id":{"type":"string"},
          "steps":{"type":"array","items":{"type":"string"}},
          "reps":{"type":"string"},
          "cue":{"type":"string"},
          "contra":{"type":"array","items":{"type":"string"}}
        }}
    },
    "practice_plan":{
      "type":"object","required":["days","schedule"],
      "properties":{
        "days":{"type":"integer","minimum":7,"maximum":28},
        "schedule":{"type":"array","minItems":7,
          "items":{"type":"object","required":["day","focus"],
            "properties":{
              "day":{"type":"integer","minimum":1},
              "focus":{"type":"array","items":{"type":"string"}}
            }}
        }
      }
    },
    "one_liner":{"type":"string","maxLength":140}
  }
}
